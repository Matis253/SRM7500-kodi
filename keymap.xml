<!-- 
keymap.xml for Philips SRM7500 Remote
VERSION 1.2 by Matis - https://github.com/Matis253/SRM7500-kodi
-->

<keymap>
  <global>
    <remote>
      <!-- The Main Features -->
      <playdvd>contextmenu</playdvd>
      <power>shutdownmenu</power>
      <!-- The Lowest Buttons -->
      <red>seek(-100000)</red>
      <green>videobookmarks</green>
      <yellow>activatewindow(osdvideosettings)</yellow>
      <blue>activatewindow(osdaudiosettings)</blue>
    </remote>
  </global>
  <pvrosdteletext>
    <remote>
      <red>red</red>
      <green>green</green>
      <yellow>yellow</yellow>
      <blue>blue</blue>
    </remote>
  </pvrosdteletext>
</keymap>
