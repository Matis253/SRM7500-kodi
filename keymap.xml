<keymap>
  <global>
    <remote>
      <!-- The Main Features -->
      <playdvd>contextmenu</playdvd>
      <!-- The Lowest Buttons -->
      <red>title</red>
      <green>chapter</green>
      <yellow>subtitles</yellow>
      <blue>audio</blue>
    </remote>
  </global>
  <pvrosdteletext>
    <remote>
      <red>red</red>
      <green>green</green>
      <yellow>yellow</yellow>
      <blue>blue</blue>
    </remote>
  </pvrosdteletext>
</keymap>
